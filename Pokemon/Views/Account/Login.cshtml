
@{
    ViewBag.Title = "Login";
}


@using (@Html.BeginForm("Log", "Account", FormMethod.Post, new { @Class = "account_form flex-direction-column",@id = "login_form" }))
{
       
    <input type="text" name="playerName" placeholder="Name" autocomplete="off" required/>

    <input type="password" name="password" placeholder="Password" required/>

    <button class="btn-logReg" type="submit" data-modal="mod-login">Login</button>
}








